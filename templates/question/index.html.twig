{# templates/question/index.html.twig #}

<h1>Questions pour le quiz : {{ quiz.title }}</h1>

<ul>
    {% for question in questions %}
        <li>
            {{ question.question }} 
            <a href="{{ path('question_edit', {quiz_id: quiz.id, id: question.id}) }}">Modifier</a>
            <form action="{{ path('question_delete', {quiz_id: quiz.id, id: question.id}) }}" method="POST" style="display:inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ question.id) }}">
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </form>
        </li>
    {% endfor %}
</ul>

<a href="{{ path('question_new', {quiz_id: quiz.id}) }}">Ajouter une nouvelle question</a>
