{# templates/quiz/show.html.twig #}

<h1>Détails du quiz pour le cours {{ course.title }}</h1>

<p><strong>Titre du quiz :</strong> {{ quiz.title }}</p>
<p><strong>Question :</strong> {{ quiz.question }}</p>
<p><strong>Réponse correcte :</strong> {{ quiz.answer }}</p>

<a href="{{ path('quiz_index', { 'course_id': course.id }) }}">Retour à la liste des quizzes</a>
